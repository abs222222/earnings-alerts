{
  "name": "earnings-alerts",
  "version": "1.0.0",
  "description": "Email alerts for upcoming company earnings report dates",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "node node_modules/ts-node/dist/bin.js src/main.ts",
    "check": "node node_modules/ts-node/dist/bin.js src/main.ts --check-trading-day",
    "check:dry": "node node_modules/ts-node/dist/bin.js src/main.ts --check-trading-day --dry-run",
    "dry-run": "node node_modules/ts-node/dist/bin.js src/main.ts --dry-run --verbose",
    "holdings-sync": "node node_modules/ts-node/dist/bin.js src/holdings-sync.ts",
    "holdings-sync:dry": "node node_modules/ts-node/dist/bin.js src/holdings-sync.ts --dry-run",
    "test": "jest"
  },
  "keywords": [
    "earnings",
    "alerts",
    "email",
    "stocks"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0"
  },
  "dependencies": {
    "dotenv": "^16.3.0",
    "googleapis": "^130.0.0",
    "date-fns": "^3.0.0",
    "commander": "^12.0.0"
  }
}
